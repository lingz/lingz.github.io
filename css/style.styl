      top 0px
      padding-top 120px
      background-color #414141
      margin-left -40px
      padding-right 30px
      padding-left 15px
  #showmenu
    margin-top 0px
  #projectsFooter
    text-align center
    margin-bottom 50px
    margin-top 30px
    .left
