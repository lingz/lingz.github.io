darkerblack = #7C7C7C
lighterblack = #6C6C6C
lightestGray = #CFCFCF
evenLighterGray = #EDEDED
blue = #81A8C5

body
  font-family: Lato
  color: blue
  height 100%
  margin 0
  -webkit-font-smoothing: subpixel-antialiased

html
  height 100%
  
.clear
  clear both

ul
  list-style-type: none

a
  text-decoration: none

li
  cursor pointer

//Mode select screen
#selectMode
  height 50%
  margin auto
  position absolute
  top 0
  bottom 0
  right 0
  left 0
  text-align center
  #modeSelectTitle
    font-weight 300
    font-size 3em
  .modeSelectButton
    margin 60px 40px
    display inline-block
  .modeLabel
    font-size 1.3em
  .circularPhoto
    transition: all 0.2s ease-out;


.circularPhoto
  height:200px

.circular
  overflow: hidden
  border-radius: 100%
  background-size: cover
  background-position: center
  background-repeat: no-repeat


//Project title
h2
  font-family: Lato
  margin: -10px
  font-size 3em
  font-weight: 700

//Subheading for Project titles
h3
  margin: 0px 0px 0px 0px
  font-size: 1.2em
  font-weight: 300
  color lighterblack
  margin-bottom 30px

//For "Skills" "contact" etc headers inside projects
h4
  margin: 30px 0px 8px 0px
  font-weight: 600
  font-size 1.4em
  
h5
  margin: 0px
  font-weight: 300

p
  font-weight: 300
  color: lighterblack

table
  margin-left auto
  margin-right auto

//******GENERAL USE STYLING******//



//***Home Button***//
