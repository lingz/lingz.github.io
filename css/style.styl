  text-decoration: none
  color lightestGray
  padding 10px 20px
  margin 0 10px
  transition: color 0.1s linear;
  &:hover
    color darkerblack
    border-color darkerblack
  i
    margin-right 8px
  

//WHALE//
.fixed
  position: fixed
  top: 20px
  margin-right 20%
  background-color: #0f0 ! important
  
#whale{
  width:100%;
  bottom: 0;
  position: fixed;
  left: 0;
  -webkit-animation: whaleAni 5s linear 0s infinite alternate-reverse; /* Chrome, Safari, Opera */
}

/* Chrome, Safari, Opera */
@-webkit-keyframes whaleAni {
    0%   {left:0px; bottom:0px;}
    25%  {left:-20px; bottom:-20px;}
    50%  {left:-50px; bottom:-25px;}
    75%  {left:-30px; bottom:-30px;}
    100% {left:-20px; bottom:-10px;}
}

@media screen and (max-width: 900px)
  a
    &.active
      color blue
  .projectDetail
    padding-left 0
  #projectHeading
    display none
  .pull-menu
    margin-left -170px
    &.active
