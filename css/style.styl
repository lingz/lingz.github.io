.menuList
  padding: 0px
  margin-top 40px

#menuLingHeading
  font-size 1.7em
  font-weight 300
  top 15%
  .active
    color blue
  a
    &:hover
      color blue
  
#projectHeading
  color blue
  margin-bottom 10px
  font-weight 300
  font-size 1.2em

a
  color lightestGray
  font-weight 300
  line-height 1.8em
  font-size 1.1em
  transition: color 0.1s linear;
  &:hover
    color #9D9D9D
  &.active
