  max-width 900px
  margin-left auto
  margin-right auto
  padding 0px 30px
  padding-bottom 50px
  margin-top 40px
  margin-bottom 50px
  padding-top 20px
  border-top: 1px solid evenLighterGray;
  color lighterblack
